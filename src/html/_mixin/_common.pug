mixin buttonBorder(tag)
  #{tag}.c-button-border.js-scroll-item.js-hover(
    href = attributes.href,
    class = attributes.className
    )
    span.c-button-border__label
      block
    span.c-button-border__line-v
    span.c-button-border__line-h

